{
    "variables": {
        "iso_url": "http://cdimage.debian.org/debian-cd/8.7.1/amd64/iso-cd/debian-8.7.1-amd64-netinst.iso",
        "iso_checksum": "749a15b7690769dd99e85d6104182a03d370b04b36106ec7cfaf6a551aa89fb4",
        "iso_checksum_type": "sha256",
        "preseed": "debian8.cfg",
        "domain": "kle.cz",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "vm_name": "instantni-vps",
        "box_name": "instantni-vps",
        "box_version": "0.0.6",
        "locale": "en_US",
        "language": "en"
    },
    "builders": [{
            "vm_name": "{{user `vm_name`}}-{{user `box_version`}}",
            "type": "virtualbox-iso",
            "http_directory": "http",
						"headless": true,
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "guest_os_type": "Debian_64",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_wait_timeout": "10000s",
            "boot_command": [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed` }} <wait>",
                "debian-installer={{ user `locale`}} <wait>",
                "auto <wait>",
                "locale={{ user `locale`}} <wait>",
                "kbd-chooser/method={{ user `language` }} <wait>",
                "keyboard-configuration/xkb-keymap={{ user `language` }} <wait>",
                "netcfg/get_hostname={{ user `box_name` }} <wait>",
                "netcfg/get_domain={{ user `domain` }} <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap={{ user `language` }} <wait>",
                "<enter><wait>"
            ],
            "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
            "disk_size": 30140,
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "2048"],
                ["modifyvm", "{{.Name}}", "--cpus", "2"],
                ["modifyvm", "{{.Name}}", "--vram", "16"]
            ]
        }],
    "provisioners": [{
        "type": "shell",
        "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
        "scripts": [
            "script/base.sh",
            "script/vagrant.sh",
            "script/vmtools.sh",
            "script/provisioner.sh",
            "script/kle.sh",
            "script/cleanup.sh",
            "script/zerodisk.sh"
        ]
    }],
    "post-processors": [{
        "type": "vagrant",
        "keep_input_artifact": false,
        "output": "output/{{user `box_name`}}-{{user `box_version`}}.box"
    }]
}
